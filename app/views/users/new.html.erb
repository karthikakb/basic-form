

  <h2>User Details </h2>
  <%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this recipe from being saved:</h2>
    </div>
  <% end %>
  <div class="form-group">

  <div class="field">
    <%= f.label :firstname %>
    <%= f.text_field :firstname, class: 'form-control'  %>
  </div>

  <div class="field">
    <%= f.label :lastname %>
    <%= f.text_field :lastname, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :dob %>
    <%= f.text_field :dob, class: 'form-control'  %>
    

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control'  %>
  </div>
  <div class="field">
    <%= f.fields_for :useraddress, Useraddress.new do |useraddress_attributes|%>
        <%= useraddress_attributes.label :houseno, "House no:" %>
        <%= useraddress_attributes.text_field :houseno, class: 'form-control'  %>
         <%= useraddress_attributes.label :street, "Street:" %>
        <%= useraddress_attributes.text_field :street, class: 'form-control'  %>
         <%= useraddress_attributes.label :city, "City:" %>
        <%= useraddress_attributes.text_field :city, class: 'form-control'  %>
         <%= useraddress_attributes.label :state, "State:" %>
        <%= useraddress_attributes.text_field :state, class: 'form-control'  %>
         <%= useraddress_attributes.label :country, "country:" %>
        <%= useraddress_attributes.text_field :country, class: 'form-control'  %>
    <% end %>
  </div>
  <br><br>
  <div class="field">
    <%= f.fields_for :userphoto, Userphoto.new do |userphoto_attributes|%>
        <%= userphoto_attributes.label :attachment, "Photo Attachment:" %>
        <%= userphoto_attributes.file_field :attachment %>
    <% end %>
    
  </div>
 
  <br>

  <div class="actions">
    <%= f.submit %>
  </div>
  </div>
<% end %>

