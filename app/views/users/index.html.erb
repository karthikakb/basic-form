     <%= javascript_include_tag 'datatable', 'data-turbolinks-track': 'reload' %>

    <% end %>

<%= stylesheet_link_tag 'image.css' %>
<body>
    
       
       <div class="row">
        
    <% @user.each do |user| %>
     <div class="column">
      <a href="#" onclick="myFunction(this)">
   <%= image_tag(user.userphoto.attachment.url, alt: 'Image') if user.userphoto.attachment? %>
   </a>
     </div>
   <% end %>

  </div>



  <h1>User form</h1>
<table class="table table-bordered" id="data_table">
  <thead>
    <tr>
      <th colspan="col">FirstName</th>
      <th colspan="col">LastName</th>
      <th colspan="col">Email</th>
      <th colspan="col">DOB</th>
      <th colspan="col">Houseno</th>
      <th colspan="col">Street</th>
      <th colspan="col">City</th>
      <th colspan="col">State</th>
      <th colspan="col">Country</th>
      <th colspan="col">pdf</th>
      <th colspan="col">destory</th>


    </tr>
  </thead>

  <tbody>
    <% @user.each do |user| %>
      <tr>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.email %></td>
        <td><%= user.dob %></td>
        <td><%= user.useraddress.houseno %></td>
        <td><%= user.useraddress.street %></td>
        <td><%= user.useraddress.city %></td>
        <td><%= user.useraddress.state %></td>
        <td><%= user.useraddress.country %></td>
        <td><a href="http://localhost:3000/users/show.pdf">Show PDF</a></td>
        <td><%= link_to 'Destroy', user_path(user) , method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, :class => '  ' %></td>
        
      </tr>
      <% end %>
    </tbody>
  </table>
  </body>

  
